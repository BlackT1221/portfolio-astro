---
import { getCollection } from "astro:content";
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
const allProjects = await getCollection("projects");
const pageTitle = "Portafolio";
---
<Layout pageTitle={pageTitle}>
    <div class="gif">
		<img width="300" height="259" alt="RaccoonSpaceGif" src="/codificacion-web-2.png" />
	</div>
    <h2>Un poco de mi trabajo</h2>
    <ul role="list" class="link-card-grid">
        {allProjects.map((card) => <Card 
            url={`/projects/${card.slug}/`} 
            image={card.data.image.url} 
            title={card.data.title} 
            body={card.data.description}
        />)}
    </ul>
</Layout>

